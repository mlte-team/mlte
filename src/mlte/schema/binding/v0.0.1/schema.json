{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Binding",
    "properties": {
        "schema_version": {
            "type": "string",
            "description": "The version identifier for the schema."
        },
        "properties": {
            "type": "array",
            "description": "A collection of the properties represented by the binding.",
            "items": {
                "$ref": "#/definitions/property"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "schema_version",
        "properties"
    ],
    "definitions": {
        "property": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "An identifier for the property."
                },
                "result_identifiers": {
                    "type": "array",
                    "description": "A collection of the result identifiers for the property.",
                    "items": {
                        "type": "object",
                        "properties": {
                            "identifier": {
                                "type": "string",
                                "description": "The identifier for the result"
                            }
                        }
                    }
                }
            }
        }
    }
}