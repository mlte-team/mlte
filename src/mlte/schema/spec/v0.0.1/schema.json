{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Specification",
    "type": "object",
    "properties": {
        "schema_version": {
            "type": "string",
            "description": "The version identifier for the schema."
        },
        "properties": {
            "type": "array",
            "description": "The collection of properties of which the specification is composed.",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The identifier for the property." 
                    },
                    "repr": {
                        "type": "string",
                        "description": "The representation required to reproduce the property."
                    },
                    "description": {
                        "type": "string",
                        "description": "The property description."
                    }
                }
            }
        }
    },
    "additionalProperties": false,
    "required": ["schema_version"]
}