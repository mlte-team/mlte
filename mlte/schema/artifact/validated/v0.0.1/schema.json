{
  "$defs": {
    "ConditionModel": {
      "description": "A description of a condition for a property.",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "arguments": {
          "default": [],
          "items": {},
          "title": "Arguments",
          "type": "array"
        },
        "callback": {
          "title": "Callback",
          "type": "string"
        }
      },
      "required": [
        "name",
        "callback"
      ],
      "title": "ConditionModel",
      "type": "object"
    },
    "EvidenceMetadata": {
      "description": "A simple wrapper for evidence metadata.",
      "properties": {
        "measurement_type": {
          "title": "Measurement Type",
          "type": "string"
        },
        "identifier": {
          "$ref": "#/$defs/Identifier"
        },
        "info": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Info"
        }
      },
      "required": [
        "measurement_type",
        "identifier"
      ],
      "title": "EvidenceMetadata",
      "type": "object"
    },
    "Identifier": {
      "description": "\n    Identifier is a simple class that standardizes\n    the manner in which Measurements, Values, and\n    Results are uniquely identified throughout\n    their lifetimes.\n    ",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "title": "Identifier",
      "type": "object"
    },
    "PropertyAndResultsModel": {
      "description": "A description of a property, along with results.",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "description": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Description"
        },
        "rationale": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Rationale"
        },
        "conditions": {
          "additionalProperties": {
            "$ref": "#/$defs/ConditionModel"
          },
          "default": {},
          "title": "Conditions",
          "type": "object"
        },
        "module": {
          "title": "Module",
          "type": "string"
        },
        "results": {
          "additionalProperties": {
            "$ref": "#/$defs/ResultModel"
          },
          "default": {},
          "title": "Results",
          "type": "object"
        }
      },
      "required": [
        "name",
        "module"
      ],
      "title": "PropertyAndResultsModel",
      "type": "object"
    },
    "ResultModel": {
      "description": "A description of a Result.",
      "properties": {
        "type": {
          "title": "Type",
          "type": "string"
        },
        "message": {
          "title": "Message",
          "type": "string"
        },
        "metadata": {
          "anyOf": [
            {
              "$ref": "#/$defs/EvidenceMetadata"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "type",
        "message",
        "metadata"
      ],
      "title": "ResultModel",
      "type": "object"
    }
  },
  "description": "The model implementation for the ValidatedSpec artifact.",
  "properties": {
    "artifact_type": {
      "const": "validated_spec",
      "title": "Artifact Type"
    },
    "spec_identifier": {
      "default": "",
      "title": "Spec Identifier",
      "type": "string"
    },
    "properties": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/PropertyAndResultsModel"
      },
      "default": [],
      "title": "Properties"
    }
  },
  "required": [
    "artifact_type"
  ],
  "title": "ValidatedSpecModel",
  "type": "object"
